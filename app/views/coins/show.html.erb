<p id="notice"><%= notice %></p>


<form>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.moeda, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.sigla, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:url_imagem) %>
    <%= text_field_tag nil, @coin.url_imagem, class:"form-control", disabled: true%>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type) %>
    <%= text_field_tag nil, @coin.mining_type.description, class:"form-control", disabled: true%>
  </div>
</form>

<%= link_to t('link.edit'), edit_coin_path(@coin), class:"btn btn-primary" %> |
<%= link_to t('link.back'), coins_path, class:"btn btn-primary" %>