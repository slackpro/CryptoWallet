<p id="notice"><%= notice %></p>

<h1> <%= Coin.model_name.human(count: @coins.count ) %> </h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_imagem) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.moeda %></td>
        <td><%= coin.sigla %></td>
        <td><%= image_tag coin.url_imagem, size: "25x25" %></td>
        <td><%= link_to t('link.show'), coin %></td>
        <td><%= link_to t('link.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('link.destroy'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link.new'), new_coin_path, class:"btn btn-primary" %>
